{% extends 'tasks/base.html' %}
{% load static %}

{% block title %}Dashboard - Task Manager{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">
                <i class="bi bi-speedometer2 text-gradient"></i>
                Dashboard
            </h1>
            <p class="text-muted mb-0">Огляд ваших завдань та проєктів</p>
        </div>
        <a href="{% url 'task_create' %}" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Створити завдання
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card primary">
                <div class="stat-card-icon">
                    <i class="bi bi-list-task"></i>
                </div>
                <div class="stat-card-value">{{ total_tasks }}</div>
                <div class="stat-card-label">Всього завдань</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card success">
                <div class="stat-card-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-card-value">{{ completed_tasks }}</div>
                <div class="stat-card-label">Виконано</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card warning">
                <div class="stat-card-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="stat-card-value">{{ incomplete_tasks }}</div>
                <div class="stat-card-label">В процесі</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card danger">
                <div class="stat-card-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <div class="stat-card-value">{{ overdue_tasks }}</div>
                <div class="stat-card-label">Прострочено</div>
            </div>
        </div>
    </div>

    <!-- My Tasks Summary -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="stat-card info">
                <div class="stat-card-icon">
                    <i class="bi bi-person-check"></i>
                </div>
                <div class="stat-card-value">{{ my_tasks }}</div>
                <div class="stat-card-label">Мої активні завдання</div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="stat-card success">
                <i class="bi bi-pie-chart me-2"></i>
                Розподіл за пріоритетом
                </h5>
            </div>
            <div class="card-body">
                <canvas id="priorityChart" height="250"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-activity me-2"></i>
                    Остання активність
                </h5>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                {% for activity in recent_activity %}
                <div class="d-flex gap-3 mb-3 pb-3 border-bottom">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-2">
                            <i class="bi bi-circle-fill text-primary" style="font-size: 0.5rem;"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <strong>{{ activity.user.get_full_name|default:"Система" }}</strong>
                                <p class="mb-0 text-muted small">{{ activity.description }}</p>
                            </div>
                            <small class="text-muted">{{ activity.created_at|timesince }} тому</small>
                        </div>
                    </div>
                </div>
                {% empty %}
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mb-0 mt-2">Немає активності</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<!-- Upcoming Deadlines and Projects -->
<div class="row g-4">
    <!-- Upcoming Deadlines -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event me-2"></i>
                    Наближаються дедлайни
                </h5>
                <a href="{% url 'task_list' %}" class="btn btn-sm btn-outline-primary">
                    Всі завдання
                </a>
            </div>
            <div class="card-body">
                {% for task in upcoming_tasks %}
                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                    <div class="flex-grow-1">
                        <a href="{% url 'task_detail' task.pk %}" class="text-decoration-none">
                            <strong class="d-block">{{ task.name }}</strong>
                        </a>
                        <div class="d-flex gap-2 mt-1">
                            <span class="badge badge-{{ task.priority|lower }}">
                                {{ task.get_priority_display }}
                            </span>
                            {% if task.task_type %}
                            <span class="badge bg-info">{{ task.task_type }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="text-end">
                        <small class="text-muted d-block">
                            <i class="bi bi-calendar-event"></i>
                            {{ task.deadline|date:"d.m.Y" }}
                        </small>
                        <small class="text-warning">
                            {{ task.deadline|timeuntil }}
                        </small>
                    </div>
                </div>
                {% empty %}
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-check-circle fs-1"></i>
                    <p class="mb-0 mt-2">Немає завдань з наближаючимися дедлайнами</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Projects -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-folder2 me-2"></i>
                    Проєкти
                </h5>
                <a href="{% url 'project_list' %}" class="btn btn-sm btn-outline-primary">
                    Всі проєкти
                </a>
            </div>
            <div class="card-body">
                {% for project in projects %}
                <div class="mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <a href="{% url 'project_detail' project.pk %}" class="text-decoration-none">
                            <strong>{{ project.name }}</strong>
                        </a>
                        <span class="badge bg-secondary">
                            {{ project.tasks.count }} завдань
                        </span>
                    </div>
                </div>
                {% empty %}
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-folder-plus fs-1"></i>
                    <p class="mb-0 mt-2">Немає проєктів</p>
                    <a href="{% url 'project_create' %}" class="btn btn-sm btn-primary mt-2">
                        Створити проєкт
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}

{% block extra_js %}
<script>
    // Priority Distribution Chart
    document.addEventListener('DOMContentLoaded', function () {
        const ctx = document.getElementById('priorityChart');
        if (ctx) {
            const priorityData = {{ priority_stats| safe
        }
    };

    const labels = [];
    const data = [];
    const colors = {
        'Urgent': '#ef4444',
        'High': '#f59e0b',
        'Medium': '#3b82f6',
        'Low': '#9ca3af'
    };

    priorityData.forEach(item => {
        labels.push(item.priority);
        data.push(item.count);
    });

    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: labels.map(label => colors[label] || '#6366f1'),
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                }
            }
        }
    });
    }
});
</script>
{% endblock %}